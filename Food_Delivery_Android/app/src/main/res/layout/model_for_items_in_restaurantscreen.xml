<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="7dp"
        android:id="@+id/cardView_For_Items_In_RestaurantScreen">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="253dp"
                android:maxHeight="40dp"
                android:maxLines="1"
                android:layout_marginVertical="5dp"
                android:id="@+id/name_items_RestaurantScreen"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="253dp"
                android:maxHeight="40dp"
                android:layout_below="@+id/name_items_RestaurantScreen"
                android:maxLines="1"
                android:layout_marginVertical="5dp"
                android:id="@+id/price_items_RestaurantScreen"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="253dp"
                android:maxHeight="40dp"
                android:layout_below="@+id/price_items_RestaurantScreen"
                android:maxLines="1"
                android:layout_marginVertical="5dp"
                android:id="@+id/review_items_RestaurantScreen"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="253dp"
                android:layout_below="@+id/price_items_RestaurantScreen"
                android:maxLines="4"
                android:layout_marginVertical="5dp"
                android:id="@+id/Description_items_RestaurantScreen"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/image_item_RestaurantScreen"
                android:layout_alignParentEnd="true"
                android:contentDescription="Add Image" />
            <Button
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="@string/add_button_restaurant_screen"
                android:layout_marginTop="110dp"
                android:layout_marginEnd="25dp"
                android:id="@+id/addToCart_button_RestaurantScreen"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
