<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="7dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/design_default_color_secondary"
        android:layout_marginHorizontal="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/nameOfItem_CartFragment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:textSize="18sp"
                    android:layout_marginTop="5dp"
                    android:maxLines="1"
                    android:maxWidth="100dp"
                    android:id="@+id/priceOfItem_CartFragment"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:maxLines="4"
                    android:maxWidth="170dp"
                    android:layout_marginTop="5dp"
                    android:textSize="16sp"
                    android:id="@+id/itemDescription_CartFragment"/>

            </LinearLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/imageOfItem_CartFragment"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/proceedButton_CartFragment"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="-15dp"
                android:text="Proceed"
                android:layout_below="@+id/imageOfItem_CartFragment"/>

        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>    
   
</LinearLayout>