<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:id="@+id/username_PendingOrderScreen"
                android:text="Chirag Bhatiwal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:layout_below="@+id/username_PendingOrderScreen"
                android:layout_marginStart="10dp"
                android:id="@+id/addressUser_PendingOrderScreen"
                android:text="168/16,Nai Basti,gurugram,Haryana"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/addressUser_PendingOrderScreen"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout_PendingOrderScreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/category_PendingOrderScreen"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_marginHorizontal="5dp"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/itemName_PendingOrderScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/category_PendingOrderScreen"
                        android:text="Chowmein"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/itemPrice_PendingOrderScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/itemName_PendingOrderScreen"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/category_PendingOrderScreen"
                        android:text="Rs. 120"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/itemQuantity_PendingOrderScreen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="25dp"
                        android:text="x1"
                        android:textSize="20sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:text="Accept"
                android:id="@+id/orderAcceptButton_PendingOrderScreen"
                android:layout_below="@+id/cardView"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="100dp"
                android:id="@+id/orderRejectButton_PendingOrderScreen"
                android:layout_below="@+id/cardView"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>