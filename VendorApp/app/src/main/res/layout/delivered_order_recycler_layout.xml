<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="5dp"
        app:cardCornerRadius="8dp"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"
                android:id="@+id/BuyerName_TextView_OrderManageScreen"
                android:text="Chirag Bhatiwal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:layout_below="@+id/BuyerName_TextView_OrderManageScreen"
                android:layout_marginStart="10dp"
                android:id="@+id/BuyerAddress_TextView_OrderManageScreen"
                android:text="168/16,Nai Basti,gurugram,Haryana"/>

            <TextView
                android:id="@+id/StatusShowing_TextView_OrderManageScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="5dp"
               android:layout_marginRight="8dp"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:text="Rejected"

                />

            <AutoCompleteTextView
                android:id="@+id/StatusManage_AutoCompleteTextView_OrderManageScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
               />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp"
                android:layout_below="@+id/BuyerAddress_TextView_OrderManageScreen">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:textSize="20sp"
                        android:textStyle="bold"

                        android:id="@+id/ItemName_TextView_OrderManageScreen"
                        android:text="Chowmein"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ItemName_TextView_OrderManageScreen"
                        android:id="@+id/ItemPrice_TextView_OrderManageScreen"
                        android:layout_marginTop="5dp"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:text="Rs. 120"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textSize="20sp"
                        android:layout_centerInParent="true"
                        android:layout_marginEnd="25dp"
                        android:id="@+id/ItemQuantity_TextView_OrderManageScreen"
                        android:text="x1"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>