<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="8dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:maxWidth="150dp"
                android:textStyle="bold"
                android:textSize="22sp"
                android:maxLines="1"
                android:id="@+id/itemName_MenuScreen"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxLines="1"
                android:maxWidth="150dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/itemName_MenuScreen"
                android:id="@+id/itemPrice_MenuScreen"/>

            <TextView
                android:layout_width="wrap_content"
                android:maxWidth="170dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:maxLines="4"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/itemPrice_MenuScreen"
                android:id="@+id/itemDescription_MenuScreen"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_margin="5dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/itemImage_MenuScreen"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>